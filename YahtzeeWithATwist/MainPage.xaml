        </TextBlock>
        <TextBlock x:Name="bonusLabel" HorizontalAlignment="Left" Margin="783,342,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22">
            <Run FontWeight="Bold" Text="Bonus:"/>
        </TextBlock>
        <TextBlock x:Name="threeOfKindLabel" HorizontalAlignment="Left" Margin="783,376,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22">
            <Run FontWeight="Bold" Text="Three of a kind:"/>
        </TextBlock>
        <TextBlock x:Name="fourOfKindLabel" HorizontalAlignment="Left" Margin="784,410,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22">
            <Run FontWeight="Bold" Text="Four of a kind:"/>
        </TextBlock>
        <TextBlock x:Name="fullHouseLabel" HorizontalAlignment="Left" Margin="784,444,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22">
            <Run FontWeight="Bold" Text="Full House:"/>
        </TextBlock>
        <TextBlock x:Name="smallStraightLabel" HorizontalAlignment="Left" Margin="784,478,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22">
            <Run FontWeight="Bold" Text="Small Straight:"/>
        </TextBlock>
        <TextBlock x:Name="largeStraightLabel" HorizontalAlignment="Left" Margin="783,512,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22">
            <Run FontWeight="Bold" Text="Large Straight:"/>
        </TextBlock>
        <TextBlock x:Name="chanceLabel" HorizontalAlignment="Left" Margin="783,546,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22">
            <Run FontWeight="Bold" Text="Chance:"/>
        </TextBlock>
        <TextBlock x:Name="yahtzeeLabel" HorizontalAlignment="Left" Margin="783,580,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22">
            <Run FontWeight="Bold" Text="YAHTZEE:"/>
        </TextBlock>
        <TextBlock x:Name="totalScoreLabel" HorizontalAlignment="Left" Margin="783,630,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22">
            <Run FontWeight="Bold" Text="Total Score:"/>
        </TextBlock>
        <TextBlock x:Name="onesScore" HorizontalAlignment="Left" Margin="1105,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22">
            <Run FontWeight="Bold" Text="15"/>
        </TextBlock>
        <TextBlock x:Name="textBlock1_Copy16" HorizontalAlignment="Left" Margin="825,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22">
            <Run FontWeight="Bold" Text="Type"/>
        </TextBlock>
        <TextBlock x:Name="textBlock1_Copy17" HorizontalAlignment="Left" Margin="1087,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22">
            <Run FontWeight="Bold" Text="Score"/>
        </TextBlock>
        <TextBlock x:Name="twosScore" HorizontalAlignment="Left" Margin="1105,138,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22" RenderTransformOrigin="0.64,1.793">
            <Run FontWeight="Bold" Text="15"/>
        </TextBlock>
        <TextBlock x:Name="threesScore" HorizontalAlignment="Left" Margin="1105,172,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22" RenderTransformOrigin="0.64,1.793">
