<Page
    x:Class="YahtzeeWithATwist.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:YahtzeeWithATwist"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <Grid Background="#FFFF7B49" Margin="6,46,-6,-46">
        <Image x:Name="rollDie1" HorizontalAlignment="Left" Height="100" Margin="140,150,0,0" VerticalAlignment="Top" Width="100" Source="Dice/Dice2.png"/>
        <Image x:Name="rollDie2" HorizontalAlignment="Left" Height="100" Margin="245,150,0,0" VerticalAlignment="Top" Width="100" Source="Dice/Dice5.png"/>
        <Image x:Name="rollDie3" HorizontalAlignment="Left" Height="100" Margin="350,150,0,0" VerticalAlignment="Top" Width="100" Source="Dice/Dice1.png"/>
        <Image x:Name="rollDie4" HorizontalAlignment="Left" Height="100" Margin="455,150,0,0" VerticalAlignment="Top" Width="100" Source="Dice/Dice4.png"/>
        <Image x:Name="rollDie5" HorizontalAlignment="Left" Height="100" Margin="560,150,0,0" VerticalAlignment="Top" Width="100" Source="Dice/Dice6.png"/>
        <Button x:Name="rollDieButton" Content="Roll Dice" HorizontalAlignment="Left" Margin="324,302,0,0" VerticalAlignment="Top" Height="74" Width="174" FontSize="36" Click="rollDieButton_Click"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="602" Margin="738,74,0,0" Stroke="Black" VerticalAlignment="Top" Width="492"/>
        <Rectangle HorizontalAlignment="Left" Height="144" Margin="129,128,0,0" Stroke="Black" VerticalAlignment="Top" Width="550" Canvas.ZIndex="-5">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF646464" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Image x:Name="heldDie1" HorizontalAlignment="Left" Height="100" Margin="140,554,0,0" VerticalAlignment="Top" Width="100" Source="Dice/Dice2.png"/>
        <Image x:Name="heldDie2" HorizontalAlignment="Left" Height="100" Margin="245,554,0,0" VerticalAlignment="Top" Width="100" Source="Dice/Dice5.png"/>
        <Image x:Name="heldDie3" HorizontalAlignment="Left" Height="100" Margin="350,554,0,0" VerticalAlignment="Top" Width="100" Source="Dice/Dice1.png"/>
        <Image x:Name="heldDie4" HorizontalAlignment="Left" Height="100" Margin="455,554,0,0" VerticalAlignment="Top" Width="100" Source="Dice/Dice4.png"/>
        <Image x:Name="heldDie5" HorizontalAlignment="Left" Height="100" Margin="560,554,0,0" VerticalAlignment="Top" Width="100" Source="Dice/Dice6.png"/>
        <Rectangle HorizontalAlignment="Left" Height="144" Margin="129,532,0,0" Stroke="Black" VerticalAlignment="Top" Width="550" Canvas.ZIndex="-5">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF646464" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
    
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="906,0,0,0" TextWrapping="Wrap" Text="Score Card" VerticalAlignment="Top" Height="59" Width="176" FontSize="36"/>
        <TextBlock x:Name="onesLabel" HorizontalAlignment="Left" Margin="784,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22">
            <Run FontWeight="Bold" Text="Ones:"/>
        </TextBlock>
        <TextBlock x:Name="twosLabel" HorizontalAlignment="Left" Margin="784,138,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22">
            <Run FontWeight="Bold" Text="Twos:"/>
        </TextBlock>
        <TextBlock x:Name="threesLabel" HorizontalAlignment="Left" Margin="784,172,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22">
            <Run FontWeight="Bold" Text="Threes:"/>
        </TextBlock>
        <TextBlock x:Name="foursLabel" HorizontalAlignment="Left" Margin="784,206,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22">
            <Run FontWeight="Bold" Text="Fours:"/>
        </TextBlock>
        <TextBlock x:Name="fivesLabel" HorizontalAlignment="Left" Margin="784,240,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22">
            <Run FontWeight="Bold" Text="Fives:"/>
        </TextBlock>
        <TextBlock x:Name="sixesLabel" HorizontalAlignment="Left" Margin="783,274,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22">
            <Run FontWeight="Bold" Text="Sixes:"/>
        </TextBlock>
        <TextBlock x:Name="sumLabel" HorizontalAlignment="Left" Margin="783,308,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22" >
