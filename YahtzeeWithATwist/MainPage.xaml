        </TextBlock>
        <TextBlock x:Name="yahtzeeScore" HorizontalAlignment="Left" Margin="1105,580,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22" RenderTransformOrigin="0.64,1.793">
            <Run FontWeight="Bold" Text="15"/>
        </TextBlock>
        <TextBlock x:Name="totalScore" HorizontalAlignment="Left" Margin="1105,630,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22" RenderTransformOrigin="0.64,1.793">
            <Run FontWeight="Bold" Text="15"/>
        </TextBlock>
        
    </Grid>
